<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">

    <!-- Toolbar cố định -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_24">

        <TextView
            android:id="@+id/tvPaymentActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Phương thức thanh toán"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- ScrollView: cuộn phần nội dung dưới toolbar -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Chỉ MỘT con trực tiếp của ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Giữ nguyên cardPaymentList và toàn bộ nội dung bên trong -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPaymentList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="60dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- PayPal -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rowPaypal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFF3E6"
                        app:strokeColor="#FFE5CC"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/imgPayPal"
                                android:layout_width="96dp"
                                android:layout_height="24dp"
                                android:src="@drawable/paypal" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tvPayPal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2211 **** **** 0595"
                                android:textColor="#222222"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- VISA -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rowVisa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:strokeColor="#EAEAEA"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/imgVisa"
                                android:layout_width="96dp"
                                android:layout_height="24dp"
                                android:src="@drawable/visa"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tvVisa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5105 **** **** 0505"
                                android:textColor="#222222"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Techcombank -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rowBidv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:strokeColor="#EAEAEA"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/imgTechcombank"
                                android:layout_width="96dp"
                                android:layout_height="24dp"
                                android:src="@drawable/tech"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tvTechcombank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9985 **** **** 6505"
                                android:textColor="#222222"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- VIETCOMBANK -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rowVcb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:strokeColor="#EAEAEA"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/imgVcb"
                                android:layout_width="96dp"
                                android:layout_height="24dp"
                                android:src="@drawable/vcb"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tvVcb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cập nhật"
                                android:textColor="#FF6A00"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- VNPAY -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rowMomo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:strokeColor="#EAEAEA"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/imgVnPay"
                                android:layout_width="96dp"
                                android:layout_height="24dp"
                                android:src="@drawable/vnpay"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tvVnPay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cập nhật"
                                android:textColor="#FF6A00"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ZALOPAY -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rowZalopay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:strokeColor="#EAEAEA"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/imgZalopay"
                                android:layout_width="96dp"
                                android:layout_height="24dp"
                                android:src="@drawable/zalopay"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cập nhật"
                                android:textColor="#FF6A00"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>