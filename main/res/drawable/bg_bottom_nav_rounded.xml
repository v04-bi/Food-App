<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền đen -->
    <solid android:color="#111111" />

    <!-- Bo tròn góc -->
    <corners android:radius="36dp" />

    <!-- Padding bên trong -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Chiều cao tối thiểu -->
    <size android:height="72dp" />
</shape>
